.live_content
  width 100%
  background-color white
  .live_content_top
    width 100%
    text-align center
    padding 10px
    box-sizing border-box
    p
      color #333333
      font-size 15px
    span
      font-size 10px
      color #b1b1b1
  .live_content_bottom
    width 100%
    padding-bottom 50px
    overflow hidden
    .live_content_item
      margin-left 8px
      margin-top 15px
      width 46%
      float left
      img
        width 100%
      .content_img_text
        width 100%
        height 15px
        background-color #f1ece2
        text-align center
        line-height 15px
        transform translateY(-2px)
        span
          font-size 10px
          color #b6a584
      .content_text
        width 100%
        .text1
          margin-top 5px
          overflow: hidden;
          white-space: nowrap;
          text-overflow:ellipsis;
          font-size 13px
          color #333333
        div
          overflow hidden
          display flex
          align-items center
          .text2
            display inline-block
            margin-top 4px
            font-size 14px
            color #c04a4e
            float left
          .text3
            text-decoration:line-through
            color #999999
            font-size 12px
            float left
            margin-left 3px
        .text4
          margin-top 4px
          display inline-block
          border-radius 8px
          padding 2px
          font-size 9px
          color #ce2424
          border 1px solid #ce2424


